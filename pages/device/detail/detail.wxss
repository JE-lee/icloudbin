page{
  font-size: 30rpx;
}

.gray{
  color:#888;
}
.cell{
  padding: 10rpx 40rpx;
  border-top: 1rpx solid #e5e5e5;
  background-color:#fff;
}

.op{
  margin-top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.op button{
  width: 200rpx;
}


.dialog{
  width: 600rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color:#fff;
  border-radius: 6rpx;
  box-shadow: 0 0 10rpx 2rpx rgba(0,0,0,.18);
}

.dialog .title{
  width: 100%;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  text-align: center;
}
.dialog input{
  width: 350rpx;
  margin: 40rpx 0;
  border: 1rpx solid #e5e5e5;
  padding: 10rpx 30rpx;
}

.dialog .btns{
  padding: 0 40rpx;
  display: flex;
}
.btns button{
  flex:1;
}
.btns button:nth-of-type(1){
  margin-right: 20rpx;
}


