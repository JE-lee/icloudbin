<!--pages/member/member.wxml-->
<view class="page">
  <view class="head">
    <image class="member-avater" src="./images/head.png"></image>
    <view class="member-name">用户名称</view>
  </view>

  <!--列表-->
  <view class="body">
    <view class="body-list">
      <view class="body-item">
        <fold>
          <image class="item-img" slot="icon" src="./images/ljt.png"></image>
          <view class="item-name" slot="name">垃圾桶列表</view>
          <view class="trash-list" slot="content">
            <view class="trash-item">
              <view class="trash-name">垃圾桶A</view>
              <view class="trash-persent">80%</view>
              <image class="trash-status-img" src="./images/btn_gz.png"></image>
            </view>
          </view>
        </fold>
      </view>

      <view class="body-item">
        <fold>
          <image class="item-img" slot="icon" src="./images/tjsj.png"></image>
          <view class="item-name" slot="name">统计数据</view>
          <view class="trash-list" slot="content">
          </view>
        </fold>
      </view>

    </view>
  </view>
</view>