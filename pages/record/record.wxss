/* pages/record/record.wxss */
.page{
  background-color:#f3f3f3;
  line-height: 1.0;
  padding-top: 102rpx;
  min-height: 100vh;
}
.tab{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}
.tab-point{
  background-color: #fff;
  font-size: 34rpx;
  display: flex;
  padding: 24rpx 20rpx;
  align-items: center;
}
.tab-img{
  width: 28rpx;
  height: 16rpx;
  margin-left: 14rpx;
}

.tab-content{
  font-size: 34rpx;
  position: relative;
}
.tab-content .mask{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  min-height: calc(100vh - 82rpx);
  z-index: -1;
  background-color:rgba(3,3,3,.56);
}
.tab-content .tab-list{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background-color:#fff;
  width: 100%;
  border-top: 1rpx solid #d0d0d0;
  padding: 40rpx 50rpx 38rpx;
  display: flex;
  flex-wrap: wrap;
}
.tab-item{
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  color: #fec62e;
  border: 1rpx solid #fec62e;
  margin-right: 28rpx;
  margin-bottom: 24rpx;
}
.tab-item.active{
  color: #68dacb;
  border-color: #68dacb;
}

.record-item{
  margin-bottom: 20rpx;
  background-color:#fff;
}

.record-item .title{
  padding: 14rpx 20rpx 14rpx 30rpx ;
  border-bottom: 1rpx solid #d6d6d6;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color:#666;
}

.record-item .name{
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid #d6d6d6;
}

.record-item .item-content{
  padding: 20rpx 20rpx 20rpx 30rpx ;
  color: #333;
  font-size: 34rpx;
}

.item-content .cell{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;

}
.item-content .cell:nth-last-of-type(1){
  margin-bottom: 0;
}