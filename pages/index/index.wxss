.page{
  background-color: #fff;
}
.mapwrapper{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.map{
  width: 100%;
  height: 100%;
}
.btn-con{
  height: 174rpx;
  display: flex;
  align-items: center;
  position: absolute;
  left: 48rpx;
  bottom: 130rpx;
}
.btn-con .img__member{
  width: 124rpx;
  height: 124rpx;
  margin-right: 98rpx;
}

.btn-con .img__saoma{
  width:352rpx;
  height: 174rpx;
}

/*弹框*/
.popup{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.popup .mask{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.4);
}
.popup .trashinfo{
  width: 560rpx;
  position: absolute;
  left: 50%;
  top: 178rpx;
  transform: translate(-50%,0);
  border-radius: 20rpx;
  background-color: #fff;
  line-height: 1.0;
  font-size: 30rpx;
  
}

.trashinfo .title{
  font-size: 36rpx;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  margin-bottom: 29rpx;
  background-color: rgb(88,215,199);
  color: #fff;
  
}

.trashinfo .body{
  padding: 0 29rpx 0 32rpx;
}

.trashinfo .status{
  font-size: 34rpx;
  display: flex;
  align-items: center; 
}
.trashinfo .status-img{
  width: 50rpx;
  height: 30rpx;
  margin-left: 15rpx;
}

.trashinfo .trash-list{
  margin-bottom: 33rpx;
  margin-top: 39rpx;
}
.trash-list .trash-item{
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.trash-list .item-image{
  margin-right: 15rpx;
  width: 70rpx;
  height: 70rpx;
}
.trash-item .right{
  display: flex;
  flex-direction: column;
  height: 62rpx;
}

.trash-item .right .text{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.trash-item .item-porgress{
  width: 350rpx;
  background-color: #e7e7e7;
  height: 12rpx;
  border-radius: 8rpx;
  position: relative;
}

.trash-item .item-porgress .front{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background-color:rgb(88,215,199);
  border-radius: 8rpx;
}

.trash-item .persent{
  font-size: 24rpx;
  color: #333;
  margin-top: 30rpx;
  margin-left: 17rpx;
}

/*最新消息*/
.news .news-detail{
  
  display: flex;  
  margin-top: 24rpx;
}
.news .dot{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color:rgb(88,215,199);
  margin-right: 8rpx;
  margin-top: 20rpx;
}
.news .text{
  flex: 1;
  word-break: break-all ; 
  word-wrap: break-word ; 
  white-space: pre-line ;
  flex-wrap: wrap;
  height: 100rpx;
  line-height: 1.8;
}
.news .time{
  color:#999;
  font-size: 24rpx;
  margin-left: 70rpx;
}

.popup .control{
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  margin-top: 66rpx;
  margin-bottom: 34rpx;
}

.popup .control .control-btn{
  width: 200rpx;
  height: 76rpx;
  line-height: 76rpx;
  border: 1rpx solid #999;
  border-radius: 40rpx;
}
.popup .control .btn-route{
  margin-right: 46rpx;
  border-color: rgb(88,215,199);
  color: rgb(88,215,199);
}