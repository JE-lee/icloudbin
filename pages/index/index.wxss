.page{
  background-color: #fff;
}
.mapwrapper{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.map{
  width: 100%;
  height: 100%;
}
.btn-con{
  height: 174rpx;
  display: flex;
  align-items: center;
  position: absolute;
  left: 48rpx;
  bottom: 130rpx;
}
.btn-con .img__member{
  width: 124rpx;
  height: 124rpx;
  margin-right: 98rpx;
}

.btn-con .img__saoma{
  width:352rpx;
  height: 174rpx;
}
.sidebar{
  width: 100vw;
  height: 100vh;
  position: absolute;
  left: 0;
  top: 0; 
}
.sidebar-mask{
  position: absolute;
  width: 100%;
  height: 100%;
}
.sidebar-content{
  width: 554rpx;
  height: 100%;
  background-color:#fff;
  position: relative;
  z-index: 1;
  font-size: 34rpx;
}

.sidebar-content .head{
  display: flex;
  height: 272rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}
.sidebar-content .head-img{
  margin-right: 50rpx;
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}
.collo-tap{
  margin-bottom: 40rpx;
}

.collo-tappoint{
  box-sizing: border-box;
  padding: 0 56rpx 40rpx;
  display: flex;
  align-items: center;
}
.collo-divider{
  content: '';
  display: block;
  height: 1rpx;
  width: calc(100% - 112rpx);
  margin-left: 56rpx;
  background-color:#d6d6d6;
}

.collo-icon{
  width: 45rpx;
  height: 45rpx;
  margin-right: 30rpx;
}

.collo-title{
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  flex: 1;
  align-items: center;
}
.collo-arrow{
  width: 28rpx;
  height: 32rpx;
}

/*内容区*/
.collo-tapcontent{
  box-sizing: border-box;
  font-size: 30rpx;
  padding-left: 130rpx;
  padding-right: 56rpx;
}

.collo-contentitem .con{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.collo-contentitem .con-name{
  flex: 1;
  overflow: hidden;
  margin-right: 10rpx;
}
.collo-contentitem .con-status{
  display:flex;
  align-items: center;
}
.collo-contentitem .con-persent{
  color:#666;
  margin-right:10rpx;
}
.collo-contentitem .con-status-img{
  width: 50rpx;
  height: 30rpx;
}

.collo-contentitem .item-divider{
  content: '';
  display: block;
  height: 1rpx;
  width: 100%;
  background-color:#d6d6d6;
}

